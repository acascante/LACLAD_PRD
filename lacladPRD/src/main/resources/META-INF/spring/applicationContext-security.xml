<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" 
    xmlns:beans="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
    <!-- HTTP security configurations -->
    <http auto-config="true" use-expressions="true">
        <form-login login-processing-url="/resources/j_spring_security_check" login-page="/login" authentication-failure-url="/login?login_error=t" />
        <logout logout-url="/resources/j_spring_security_logout" />
        <!-- Configure these elements to secure URIs in your application -->
        <intercept-url pattern="/admins/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/idioms/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/locations/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/teachers/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/companys/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/classgroups/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_TEACHER')" />
        <intercept-url pattern="/students/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_TEACHER')"  />
        <intercept-url pattern="/quizes/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_TEACHER')" />
        <intercept-url pattern="/quizquestions/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_TEACHER')" />
        <intercept-url pattern="/quizchoices/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_TEACHER')" />
        <intercept-url pattern="/quizstudents/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_TEACHER')" />
        <intercept-url pattern="/resources/**" access="permitAll" />
        <intercept-url pattern="/login/**" access="permitAll" />
        <intercept-url pattern="/**" access="isAuthenticated()" />
    </http>
    <!-- Configure Authentication mechanism -->
    <authentication-manager alias="authenticationManager">
        <!-- SHA-256 values can be produced using 'echo -n your_desired_password | sha256sum' (using normal *nix environments) -->
        <authentication-provider>
	        <password-encoder hash="plaintext" />
            <jdbc-user-service data-source-ref="dataSource" 
                users-by-username-query="SELECT u.user_name as username, u.password as password, u.status as enabled FROM system_users u WHERE u.user_name=?"
            	authorities-by-username-query="SELECT u.user_name as username, case u.type when 0 then 'ROLE_ADMIN' when 1 then 'ROLE_TEACHER' when 2 then 'ROLE_STUDENT' end as role FROM system_users u WHERE u.user_name=?"/>  
        </authentication-provider>
    </authentication-manager>
</beans:beans>